<div class="jumbotron">
    <div class="container-fluid">
            <div class="row mb-3">
                @foreach (var movie in Movies)
                {
                    <div class="col-md-3">
                        <div class="card-flex-md-row mb-3 box-shadow h-md-200">
                            <div class="card-body d-flex flex-column align-items-start">
                                <div class="card">
                                    <img src="@movie.Image" class="img-thumbnail card-img-top" alt="Card image cap" height="250" width="250">
                                    <div class="card-body">
                                        <h6 class="card-title">@movie.Name</h6>
                                        <p class="text-muted">
                                            @movie.Sinopsis
                                            <br>
                                            @movie.Category
                                            <br>
                                            <small>@movie.Casting</small>
                                            <br>
                                            <small>@movie.Premier</small>
                                        </p>
                                    </div>
                                    <div>
                                        <button @onclick="@MovieDelete">Eliminar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
</div>
@code
{
    [Parameter] public List<Movie> Movies{get;set;}
    
