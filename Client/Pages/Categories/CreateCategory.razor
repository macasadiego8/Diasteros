@page "/categories/create"
@using ProjectMoviesDiasteros.Client.Pages.Components
@inject IServiceMovie movieI
@inject NavigationManager navigationManager

<FormCategory Category="Category" OnValidSubmit="Create"></FormCategory>

@code
{
    private Category Category = new Category();

    async void Create()
    {
        var httpResponse = await movieI.Post("api/categories", Category);
        if (httpResponse.Error)
        {
            var body = await httpResponse.HttpResponseMessage.Content.ReadAsStringAsync();
            Console.WriteLine(body);            
        }
        else
        {
            navigationManager.NavigateTo("/categories");
            Console.WriteLine(Category.Name);
        }
    }    
}