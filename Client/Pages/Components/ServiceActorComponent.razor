
<div class="jumbotron">
    <div class="container-fluid">
            <div class="row mb-3">
                @foreach (var actor in Actors)
                {
                    <div class="col-md-3">
                        <div class="card-flex-md-row mb-4 box-shadow h-md-200">
                            <div class="card-body d-flex flex-column align-items-start">
                                <div class="card">
                                    <small class="card-title">@actor.Name</small>
                                    <img src="@actor.Photo" class="img-thumbnail card-img-top" alt="Card image cap" height="400px" width="400px">
                                    <div class="card-body">                                        
                                        <p class="text-muted">
                                            @actor.KnowCredits
                                            <br>
                                            <small>@actor.BirthDate</small>
                                        </p>
                                    </div>
                                    <div>
                                        <a class="btn btn-info mb-3 ml-md-4" href="actors/show"  @onclick="@ActorDetails">Ver MÃ¡s >></a>                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
</div>
@code
{
    [Parameter] public int Id{get;set;}
    [Parameter] public List<Actor> Actors{get;set;}
    
