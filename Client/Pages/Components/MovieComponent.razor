<div style="margin-right: 2%; margin-bottom: 10%; text-align: center;">
    <a>
        <img src="@Movie.Poster" height="300px" width="225px">
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;">
        <a href="@urlMovie">@Movie.Name</a>
    </p>    
    <div>
        <a class="btn btn-info">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(()=>DeleteMovie.InvokeAsync(Movie))">Eliminar</button>
    </div>
</div>
@code
{
    [Parameter] public Movie Movie{get;set;}
    [Parameter] public EventCallback<Movie> DeleteMovie{get;set;}
    private string urlMovie = $"movie/";
}